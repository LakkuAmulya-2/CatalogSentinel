# ============================================================
# CatalogSentinel — Environment Variables Template
# Copy this file to .env and fill in your actual values
# ============================================================

# ── Elasticsearch / Elastic Cloud ───────────────────────────
ES_URL=https://your-deployment.es.region.aws.elastic.cloud:443
ES_API_KEY=your_elasticsearch_api_key_here
ES_CLOUD_ID=your_cloud_id_here

KIBANA_URL=https://your-deployment.kb.region.aws.elastic.cloud
KIBANA_API_KEY=your_kibana_api_key_here

# ── Redis (optional) ─────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── FastAPI ──────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info
ENVIRONMENT=development
SECRET_KEY=change-this-in-production

# ── CORS ─────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Jina AI (optional) ───────────────────────────────────────
JINA_API_KEY=your_jina_api_key_here

# ── Slack (optional) ─────────────────────────────────────────
SLACK_WEBHOOK_URLS={"drift-alerts":"https://hooks.slack.com/services/YOUR/WEBHOOK/URL","catalog-alerts":"https://hooks.slack.com/services/YOUR/WEBHOOK/URL"}

# ── Jira (optional) ──────────────────────────────────────────
JIRA_URL=https://yourcompany.atlassian.net
JIRA_EMAIL=your@email.com
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_PROJECT_KEY=CS

# ── Drift Detection ──────────────────────────────────────────
DRIFT_KL_THRESHOLD=0.3
DRIFT_CHECK_INTERVAL_SECONDS=60
DRIFT_BASELINE_DAYS=7
DRIFT_AUTO_FIX_CONFIDENCE=0.85

# ── Catalog Intelligence ─────────────────────────────────────
CATALOG_FINDABILITY_THRESHOLD=50
CATALOG_SCHEMA_INFERENCE_MIN_SUPPORT=0.3
CATALOG_AUTO_MAP_CONFIDENCE=0.75
